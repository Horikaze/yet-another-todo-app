generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

enum ColumnType {
  backlog
  todo
  doing
  done
}

model User {
  userId String @id
  posts  Posts?
}

model Posts {
  posts      String @db.Text
  userUserId String @id @unique
  User       User   @relation(fields: [userUserId], references: [userId])
}

